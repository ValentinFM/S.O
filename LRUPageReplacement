
import java.util.*;
public class LRUPageReplacement {
    public static void lru(int[] pages, int capacity) {
        List<Integer> memory = new ArrayList<>();
        int pageFaults = 0;
        for (int page : pages) {
            if (memory.contains(page)) {
                // P치gina ya en memoria: se actualiza como la m치s reciente
                memory.remove((Integer) page);
                memory.add(page);
            } else {
                pageFaults++;
                if (memory.size() == capacity) {
                    // Reemplazo: se elimina la menos recientemente usada
                    int removed = memory.removeFirst();
                    System.out.println("P치gina eliminada: " + removed);
                }
                memory.add(page);
            }
            System.out.println("Memoria actual: " + memory);
        }
        System.out.println("\nTotal de fallos de p치gina: " + pageFaults);
    }
}
